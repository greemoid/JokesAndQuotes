<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.greemoid.jokesandquotes.presentation.FavoriteDataView
        custom:checkBoxText="@string/show_favorite_joke"
        custom:actionButtonText="@string/get_joke"
        android:id="@+id/jokeFavoriteDataView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.greemoid.jokesandquotes.presentation.FavoriteDataView
        custom:checkBoxText="@string/show_favorite_quote"
        custom:actionButtonText="@string/get_quote"
        android:id="@+id/quoteFavoriteDataView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>